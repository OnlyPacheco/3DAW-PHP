<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Calculadora Trigonométrica</title>
</head>
<body>
    <h1>Calculadora Trigonométrica</h1>
    <form method="post">
        <label for="angulo">Ângulo (em graus):</label>
        <input type="text" name="angulo" id="angulo"><br><br>
        
        <input type="submit" name="seno" value="Seno">
        <input type="submit" name="cosseno" value="Cosseno">
        <input type="submit" name="tangente" value="Tangente">
    </form>
    
    <?php
    if ($_SERVER["REQUEST_METHOD"] == "POST") { // verifica se o formulário foi enviado
        $angulo = $_POST["angulo"]; // obtém o ângulo do input de texto
        
        if (isset($_POST["seno"])) { // verifica qual botão foi clicado
            $resultado = sin(deg2rad($angulo)); // calcula o seno
            echo "<p>O seno de $angulo graus é: $resultado</p>";
        } elseif (isset($_POST["cosseno"])) {
            $resultado = cos(deg2rad($angulo)); // calcula o cosseno
            echo "<p>O cosseno de $angulo graus é: $resultado</p>";
        } elseif (isset($_POST["tangente"])) {
            $resultado = tan(deg2rad($angulo)); // calcula a tangente
            echo "<p>A tangente de $angulo graus é: $resultado</p>";
        }
    }
    ?>
</body>
</html>
